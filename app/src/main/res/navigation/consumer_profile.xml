<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consumer_profile_navigation"
    app:startDestination="@id/consumer_profile_dest">

    <fragment
        android:id="@+id/consumer_profile_dest"
        android:name="com.example.allfavour.ui.consumer.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/consumer_profile_fragment">
        <action
            android:id="@+id/my_account_dest_action"
            app:destination="@id/consumer_my_account_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/consumer_my_account_dest"
        android:name="com.example.allfavour.ui.consumer.profile.myAccount.MyAccountFragment"
        android:label="@string/my_account"
        tools:layout="@layout/consumer_my_account_fragment" />

    <fragment
        android:id="@+id/providerBaseFragment"
        android:name="com.example.allfavour.ui.provider.ProviderBaseFragment"
        android:label="provider_profile_nav_host"
        tools:layout="@layout/provider_profile_nav_host" >
    </fragment>
    <action
        android:id="@+id/provider_profile_nav_dest2"
        app:destination="@id/providerBaseFragment" />

</navigation>